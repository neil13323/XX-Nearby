<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="43dp"
              android:gravity="center_vertical"
              android:background="@android:color/white"
        >

    <TextView android:textColor="@android:color/black" android:layout_marginLeft="5dp" android:gravity="center_vertical" android:id="@+id/listmessage" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
    <LinearLayout android:layout_marginRight="5dp"  android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent">
    <ImageButton  android:layout_gravity="center"  android:id="@+id/nextbutton" android:layout_height="36dp" android:layout_width="wrap_content" android:background="@drawable/itembutton" android:src="@drawable/ic_next_step"/>
    </LinearLayout>
</LinearLayout>

