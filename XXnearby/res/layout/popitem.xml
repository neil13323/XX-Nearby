<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_pop">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView android:id="@+id/nametext" android:maxLength="12" android:textSize="18dp"  android:textColor="#000000" android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="match_parent"/>
        <ImageButton android:background="@drawable/ic_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView android:id="@+id/detailtext"  android:textSize="12dp" android:layout_height="wrap_content" android:layout_width="match_parent"/>
</LinearLayout>