<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:background="@android:color/white"
        >


    <LinearLayout android:layout_weight="1" android:orientation="vertical" android:layout_marginRight="5dp"  android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent">
        <TextView android:layout_marginLeft="5dp" android:id="@+id/name" android:textSize="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#000000"/>
        <TextView android:layout_marginLeft="5dp" android:id="@+id/detail" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@android:color/darker_gray"/>

    </LinearLayout>

    <TextView android:textColor="@android:color/black" android:textSize="20dp" android:text="500m" android:layout_marginRight="5dp" android:gravity="center_vertical" android:layout_gravity="right" android:id="@+id/distance" android:layout_width="wrap_content" android:layout_height="match_parent" />
</LinearLayout>

